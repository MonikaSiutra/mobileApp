<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.ComputerVision"
             Title="ComputerVision">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Url" PlaceholderColor="Olive" x:Name="EntryUrl" />
            <Button x:Name="DescribeImage" Text="Opisz obraz" 
                    Clicked="OnDescribeImageClicked"/>
            <Label Text="Opis: " x:Name="DescriptionText" />
            <Image Source="" 
                   x:Name="DescribedImage"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>